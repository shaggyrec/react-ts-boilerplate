{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es5",
        "module": "commonjs",
        "sourceMap": true,
        "noUnusedLocals": false,
        "noUnusedParameters": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "jsx": "react",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "lib": ["es2016", "dom"]
    },
    "include": [
        "./**/**.ts",
        "./**/**.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}
